package com.starz.view.screens{	import com.starz.view.GameScreen;	import com.greensock.TweenLite;	import flash.events.MouseEvent;	import com.starz.events.GameEvent;	public class TitleScreen extends GameScreen	{		private static const X_OFFSET:Number = 1000;		private var _titleTween:TweenLite;		private var _taglineTween:TweenLite;		private var _starzTween:TweenLite;		private var _tvTween:TweenLite;		private var _buttonTween:TweenLite;		private var _buttonTween2:TweenLite;		private var _copyrightTween:TweenLite;		public function TitleScreen()		{			init();		}		private function init():void		{			reset();			moveStageObjects();			playGame.addEventListener(MouseEvent.CLICK, showVideo);			instructions.addEventListener(MouseEvent.CLICK, showInstructions);		}		private function moveStageObjects():void		{			title.x = title.x - X_OFFSET;			tagline.x = tagline.x - X_OFFSET;			tv.x = tv.x + X_OFFSET;			logo.x = logo.x + X_OFFSET;			playGame.x = playGame.x + X_OFFSET;			instructions.x = instructions.x + X_OFFSET;		}		public function animate():void		{			_titleTween = new TweenLite(title,.5,{alpha:1,x:title.x + X_OFFSET});			_taglineTween = new TweenLite(tagline,.5,{alpha:1,x:tagline.x + X_OFFSET});			_starzTween = new TweenLite(logo,.5,{alpha:1,x:logo.x - X_OFFSET});			_tvTween = new TweenLite(tv,.5,{alpha:1,x:tv.x - X_OFFSET});			_buttonTween = new TweenLite(playGame,.5,{alpha:1,x:playGame.x - X_OFFSET});			_buttonTween2 = new TweenLite(instructions,.5,{alpha:1,x:instructions.x - X_OFFSET});			_copyrightTween = new TweenLite(copyrights, .5, {alpha: 1});		}		public function hide():void		{			_titleTween.reverse();			_taglineTween.reverse();			_starzTween.reverse();			_tvTween.reverse();			_buttonTween.reverse();			_buttonTween2.reverse();			_copyrightTween.reverse();			hideMe();		}		private function showVideo(e:MouseEvent):void		{			dispatchEvent(new GameEvent(GameEvent.SHOW_VIDEO));		}		private function showInstructions(e:MouseEvent):void		{			dispatchEvent(new GameEvent(GameEvent.SHOW_INSTRUCTIONS));		}		override public function hideMe():void		{			new TweenLite(this,TWEEN_SPEED,{alpha:0,onComplete:destroy});		}	}}