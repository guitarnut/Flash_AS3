package com.starz.view.components{	import flash.display.MovieClip;	import flash.utils.Timer;	import flash.events.TimerEvent;	import com.greensock.TweenLite;	public class MessagingFooter extends MovieClip	{		private static const DELAY:Number = 4;		private var _messages:Array = new Array();		private var _timer:Timer;		public function MessagingFooter()		{			init();		}		private function init():void		{			_timer = new Timer(DELAY * 1000,0);			_timer.addEventListener(TimerEvent.TIMER, changeImage);			originals.alpha = 0;		}		private function changeImage(e:TimerEvent):void		{			if (titles.alpha == 0)			{				new TweenLite(titles,.5,{alpha:1});				new TweenLite(originals,.5,{alpha:0});			}			else			{				new TweenLite(titles,.5,{alpha:0});				new TweenLite(originals,.5,{alpha:1});			}		}		public function startAnimations():void		{			_timer.start();			messaging.startText();		}		public function stopAnimations():void		{			_timer.stop();			messaging.stopText();		}	}}