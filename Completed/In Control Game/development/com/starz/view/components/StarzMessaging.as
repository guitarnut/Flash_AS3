package com.starz.view.components{	import flash.display.MovieClip;	import flash.utils.Timer;	import flash.events.TimerEvent;	public class StarzMessaging extends MovieClip	{		private static const DELAY:Number = 6;		private var _messages:Array = new Array();		private var _timer:Timer;		private var _counter:Number = 0;		public function StarzMessaging()		{			init();		}		private function init():void		{			_messages.push("Exclusive Original Series");			_messages.push("Up to 6 distinct channels");			_messages.push("Over 450 different titles a month");			_messages.push("Unbeatable value");			_messages.push("Available in HD & On Demand");			_timer = new Timer(DELAY * 1000,0);			_timer.addEventListener(TimerEvent.TIMER, changeText);		}		private function changeText(e:TimerEvent):void		{			messageText.text = String(_messages[_counter]);						_counter++;						if (_counter == _messages.length)			{				_counter = 0;			}		}		public function startText():void		{			_timer.start();		}		public function stopText():void		{			_timer.stop();		}	}}