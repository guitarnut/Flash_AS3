package com.starz.view.screens{	import com.starz.view.components.SimpleMC;	import flash.events.MouseEvent;	import flash.display.MovieClip;	import com.starz.events.TrainingEvent;	import com.starz.constants.ApplicationSettings;	import com.greensock.TweenLite;	import com.starz.audio.AudioManager;	public class PassportScreen extends SimpleMC	{				private var _audio:AudioManager;		public function PassportScreen()		{			init();		}		private function init():void		{			b_close.showButton();			addListeners();			x = ApplicationSettings.STAGE_WIDTH / 2;			y = ApplicationSettings.STAGE_HEIGHT / 2;						_audio= new AudioManager();		}		private function addListeners():void		{			b_close.addEventListener(MouseEvent.CLICK, handleButtonClick);		}		private function handleButtonClick(e:MouseEvent):void		{			switch (e.target.name)			{				case 'b_close' :					dispatchEvent(new TrainingEvent(TrainingEvent.PASSPORT_COMPLETE));					_audio.stopAudio();					break;			}			hideMC();		}		public function stampWin():void		{			mc_fail.hideMC();			mc_failImg.hideMC();			mc_win.showMC();			mc_winImg.showMC();			mc_stamp.showMC();						_audio.playAudio(new passportWin);		}		public function stampFail():void		{			mc_win.hideMC();			mc_winImg.hideMC();			mc_fail.showMC();			mc_failImg.showMC();						_audio.playAudio(new passportLose);		}	}}