package com.starz.view.screens{	import flash.events.MouseEvent;	import com.starz.view.components.SimpleMC;	import com.starz.constants.ApplicationSettings;	public class Stamps extends SimpleMC	{		public function Stamps()		{			init();		}		private function init():void		{			b_closeStamps.showButton();			b_closeStamps.addEventListener(MouseEvent.CLICK, function(){ hideMC();});			x = ApplicationSettings.STAGE_WIDTH / 2;			y = ApplicationSettings.STAGE_HEIGHT / 2;			mc_stamp1.dimMC();			mc_stamp2.dimMC();			mc_stamp3.dimMC();			text_nostamps.showMC();		}		public function addStamp($l:String):void		{			text_nostamps.hideMC();			text_stamps.showMC();			switch ($l)			{				case 'Location One' :					mc_stamp1.showMC();					break;				case 'Location Two' :					mc_stamp2.showMC();					break;				case 'Location Three' :					mc_stamp3.showMC();					break;			}		}	}}