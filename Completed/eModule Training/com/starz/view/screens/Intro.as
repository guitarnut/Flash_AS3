package com.starz.view.screens{	import flash.events.MouseEvent;	import com.starz.view.screens.base.BasicScreen;	public class Intro extends BasicScreen	{		public function Intro()		{			init();		}		private function init():void		{			b_skip.showButton();			addListeners();		}		private function addListeners():void		{			b_skip.addEventListener(MouseEvent.CLICK, handleButtonClick);		}		private function handleButtonClick(e:MouseEvent):void		{			switch (e.target.name)			{				case 'b_skip' :					gotoAndStop(totalFrames);					break;			}		}	}}