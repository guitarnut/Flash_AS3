package com.starz.view.screens.base{	import flash.display.MovieClip;	import flash.events.Event;	import com.greensock.TweenLite;	import com.starz.events.TrainingEvent;	import com.starz.constants.ApplicationSettings;	public class BasicScreen extends MovieClip	{		protected static const TWEEN_SPEED:Number = .5;		public function BasicScreen()		{			addEventListener(Event.ADDED_TO_STAGE, init);		}		private function init(e:Event):void		{			removeEventListener(Event.ADDED_TO_STAGE, init);			stop();			x = ApplicationSettings.STAGE_WIDTH / 2;			y = ApplicationSettings.STAGE_HEIGHT / 2;			alpha = 0;			addListeners();		}		private function addListeners():void		{			addEventListener(Event.ENTER_FRAME, checkStatus);		}		private function removeListeners():void		{			removeEventListener(Event.ENTER_FRAME, checkStatus);		}		private function checkStatus(e:Event):void		{			if (alpha == 0)			{				showScreen();			}			if (currentFrame == totalFrames)			{				removeListeners();				hideScreen();			}		}		private function animate():void		{			play();		}		private function showScreen():void		{			new TweenLite(this,TWEEN_SPEED,{alpha:1,onComplete:animate});		}		protected function fireEvent(e$:String):void		{			dispatchEvent(new TrainingEvent(e$, true, true));		}		protected function hideScreen():void		{			new TweenLite(this,TWEEN_SPEED,{alpha:0,onComplete:advanceTraining});		}		public function advanceTraining():void		{			reset();		}		protected function reset():void		{			fireEvent(TrainingEvent.SECTION_COMPLETE);		}	}}