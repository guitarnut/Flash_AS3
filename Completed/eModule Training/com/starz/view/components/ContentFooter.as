package com.starz.view.components{	import flash.events.MouseEvent;	import com.starz.view.screens.VideoPage;	import flash.events.Event;	public class ContentFooter extends SimpleMC	{		private var _castContent:SimpleMC;		private var _videoContent:SimpleMC;		private var _galleryContent:SimpleMC;		private var _currentContent:SimpleMC;		private var _photos:SimpleMC;		private var _text:SimpleMC;		private var _singleOption:Boolean = false;		public function ContentFooter()		{			init();		}		private function init():void		{			_photos = SimpleMC(getChildAt(numChildren - 1));			_text = SimpleMC(getChildAt(numChildren - 2));			setupButtons();		}		private function setupButtons():void		{			b_viewcast.addEventListener(MouseEvent.CLICK, handleButtonClick);			b_gallery.addEventListener(MouseEvent.CLICK, handleButtonClick);			b_video.addEventListener(MouseEvent.CLICK, handleButtonClick);		}		private function handleButtonClick(e:MouseEvent):void		{			switch (e.target.name)			{				case 'b_viewcast' :					if (_currentContent != _castContent)					{						hideCurrent();						_castContent.showMC();						_currentContent = _castContent;					}					else					{						hideCurrent();						_currentContent = null;					}					break;				case 'b_gallery' :					if (_currentContent != _galleryContent)					{						hideCurrent();						_galleryContent.showMC();						_currentContent = _galleryContent;					}					else					{						hideCurrent();						_currentContent = null;					}					break;				case 'b_video' :					if (_currentContent != _videoContent)					{						hideCurrent();						_videoContent.showMC();						_currentContent = _videoContent;						VideoPage(_videoContent).showVideo();					}					else					{						hideCurrent();						_currentContent = null;					}					break;			}		}		private function hideCurrent(e:Event=null):void		{						if (_currentContent)			{				_currentContent.hideMC();			}			if (e)			{				_currentContent = null;			}			//Not all modules will have a video MovieClip;			try			{				if (_currentContent == _videoContent)				{					VideoPage(_videoContent).hideVideo();				}			}			catch (e:Error)			{			}		}		public function showFooter():void		{			enterBottom();		}		public function hideFooter():void		{			hideCurrent();			hideMC();		}		public function showLocation():void		{			_photos.enterLeft(.75);			_text.enterRight(.75);		}		public function hideLocation():void		{			_photos.hideMC();			_text.hideMC();		}		public function showOptions():void		{			var totalOptions:Number = 0;			if (_castContent)			{				b_viewcast.showButton(.5);				totalOptions++;			}			if (_galleryContent)			{				b_gallery.showButton(.5);				totalOptions++;			}			if (_videoContent)			{				b_video.showButton(.5);				totalOptions++;			}			if (totalOptions == 1)			{				_singleOption = true;			}		}		public function hideOptions():void		{			b_viewcast.hideButton();			b_gallery.hideButton();			b_video.hideButton();		}		public function set cast($c:SimpleMC):void		{			_castContent = $c;			_castContent.addEventListener(Event.COMPLETE, hideCurrent);		}		public function set gallery($g:SimpleMC):void		{			_galleryContent = $g;			_galleryContent.addEventListener(Event.COMPLETE, hideCurrent);		}		public function set video($v:SimpleMC):void		{			_videoContent = $v;		}	}}