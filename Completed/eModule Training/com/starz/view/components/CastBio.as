package com.starz.view.components{	import com.starz.view.screens.CastPage;	import com.greensock.TweenLite;	import flash.events.Event;	public class CastBio extends SimpleMC	{		private var _animating:Boolean = false;		public function CastBio()		{			addEventListener(Event.ADDED_TO_STAGE, init);		}		private function init(e:Event):void		{			showMC();		}		public function moveLeft():void		{			if (! _animating)			{				_animating = true;				var $d:Number = this.width + CastPage(this.parent).PADDING;				var $x:Number = this.x - $d;				new TweenLite(this,.25,{x:$x, onComplete: reset});			}		}		public function moveRight():void		{			if (! _animating)			{				_animating = true;				var $d:Number = this.width + CastPage(this.parent).PADDING;				var $x:Number = this.x + $d;				new TweenLite(this,.25,{x:$x, onComplete: reset});			}		}		private function reset():void {			_animating = false;			CastPage(this.parent).checkPosition(this);		}	}}