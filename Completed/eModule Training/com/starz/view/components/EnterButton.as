package com.starz.view.components{	import com.greensock.TweenLite;	import com.greensock.easing.Quad;	public class EnterButton extends AdvanceButton	{		var starting_x:Number;		public function EnterButton()		{			init();		}		private function init():void		{			starting_x = x;			animate();		}		private function animate():void		{			var targetX:Number;			if (x == starting_x)			{				targetX = starting_x + 10;			}			else			{				targetX = starting_x;			}			new TweenLite(this,.5,{x:targetX, onComplete:animate, ease: Quad.easeInOut});		}	}}