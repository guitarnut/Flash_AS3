package com.starz.view.components{	import com.greensock.TweenLite;	public class RotatingText extends SimpleMC	{		private var _text:Array;		private var _count:Number;		private var _interval:Number;		public function RotatingText()		{			init();		}		private function init():void		{			setupMC();		}		private function setupMC():void		{			_text = new Array();			_count = numChildren - 1;			for (var i=0; i< numChildren; i++)			{				getChildAt(i).alpha=0;				_text.push(getChildAt(i));			}		}		public function rotateText($i:Number = 3):void		{			_interval = $i;			showNext(true);		}		private function showNext(firstRun:Boolean = false):void		{			if (!firstRun)			{				_count++;				if (_count==numChildren)				{					_count = 0;				}			}						new TweenLite(_text[_count],.5,{alpha:1,onComplete:hideCurrent});		}		private function hideCurrent():void		{			new TweenLite(_text[_count],.5,{alpha:0,onComplete:showNext,delay:_interval});		}	}}