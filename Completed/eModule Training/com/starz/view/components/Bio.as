package com.starz.view.components{	import com.starz.constants.ApplicationSettings;	import flash.events.MouseEvent;	import flash.events.Event;	import com.greensock.TweenLite;	public class Bio extends SimpleMC	{		private var _closeButton:CloseButton;		public function Bio()		{			init();		}		private function init():void		{			addCloseButton();			addEventListener(Event.ADDED_TO_STAGE, showBio);		}		private function addCloseButton():void		{			_closeButton = new CloseButton();			_closeButton.x = (ApplicationSettings.STAGE_WIDTH/2)-_closeButton.width-10;			_closeButton.y = -1*(ApplicationSettings.STAGE_HEIGHT/2)+_closeButton.height+10;			_closeButton.addEventListener(MouseEvent.CLICK, closeBio);			addChild(_closeButton);						_closeButton.showButton();		}		private function showBio(e:Event):void		{			showMC();		}		private function closeBio(e:MouseEvent):void		{			hideMC();		}		override public function hideMC(d$:Number = 0):void		{			new TweenLite(this,TWEEN_SPEED,{alpha:0,onComplete:destroy});		}	}}