package com.starz.view.components{	import com.starz.view.components.SimpleMC;	import flash.events.MouseEvent;	import flash.net.URLRequest;	import flash.display.Loader;	import flash.display.Shape;	import flash.display.LoaderInfo;	import flash.display.Bitmap;	import flash.events.Event;	public class BioImageLoader extends SimpleMC	{		private static const IMG_PATH:String = 'bios/';		private var _loader:Loader;		private var _image:String;		private var _fullsizeImages:Array;		private var _thumbnails:Array;		private var _loadCount:Number;		public function BioImageLoader()		{			init();		}		private function init():void		{			preloader.showMC();		}		private function loadImages():void		{			_loader = new Loader();			_loader.contentLoaderInfo.addEventListener(Event.COMPLETE, placeImage);			_loader.load(new URLRequest(IMG_PATH+_image));		}		private function placeImage(e:Event):void		{			var rect:Shape = new Shape();			rect.graphics.beginFill(0xFFFFFF);			rect.graphics.drawRect(0, 0, getChildAt(0).width, getChildAt(0).height);			rect.graphics.endFill();			addChild(rect);			var _bmp:Bitmap = Bitmap(_loader.content);			_bmp.smoothing = true;			addChild(_bmp);			_bmp.mask = rect;			addChild(rect);						rect.x = -(rect.width/2);			rect.y = -(rect.height/2);						_bmp.x = -(_bmp.width/2);			_bmp.y = -(_bmp.height/2);			preloader.hideMC();			this.showMC();		}		public function set content($c:String):void		{			_image = $c;			loadImages();		}	}}