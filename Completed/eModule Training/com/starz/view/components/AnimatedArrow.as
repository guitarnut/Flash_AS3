package com.starz.view.components{	import flash.events.Event;	import com.starz.constants.ApplicationSettings;	import com.greensock.TimelineLite;	import com.greensock.TweenLite;	public class AnimatedArrow extends SimpleMC	{		private var _myX:Number;		private var _myY:Number;		private var _myRotation:Number;		public function AnimatedArrow()		{			init();		}		private function init():void		{			_myX = x;			_myY = y;			_myRotation = rotation;			addEventListener(Event.ENTER_FRAME, animateArrow);		}		private function animateArrow(e:Event):void		{			removeEventListener(Event.ENTER_FRAME, animateArrow);			x =  -  ApplicationSettings.STAGE_WIDTH;			rotation = -90;			showMC();			var timeline:TimelineLite = new TimelineLite();			timeline.append(new TweenLite(this, 1.5, {x:_myX}));			timeline.append(new TweenLite(this, .25, {rotation: _myRotation, onComplete: animateLoop}));			timeline.play();		}		private function animateLoop():void		{			if (y == _myY)			{				new TweenLite(this,.5,{y:_myY - 10,onComplete:animateLoop});			}			else			{				new TweenLite(this,.5,{y:_myY,onComplete:animateLoop});			}		}	}}