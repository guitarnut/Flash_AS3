package com.starz.view.components{	import flash.display.MovieClip;	import com.greensock.TweenLite;	import com.greensock.OverwriteManager;	public class CharacterGallery extends SimpleMC	{		private static const DELAY:Number = 3;		private var _images:Array;		private var _imageLimit:Number;		private var _count:Number;		private var _currentImage:MovieClip;		public function CharacterGallery()		{			init();		}		private function init():void		{			_count = 0;						OverwriteManager.init(OverwriteManager.NONE);			storeImages();			startAnimation();		}		private function storeImages():void		{			_images = new Array();			_imageLimit = numChildren - 1;			for (var i:Number = 0; i < _imageLimit; i++)			{				MovieClip(getChildAt(i)).alpha = 0;				_images.push(getChildAt(i));			}		}		private function startAnimation():void		{			_currentImage = _images[_count];			new TweenLite(_currentImage,.5,{alpha:1});			new TweenLite(_currentImage,.5,{alpha:0, delay:DELAY, onComplete:animate});		}		private function animate():void		{			_count++;						if (_count == _imageLimit)			{				_count = 0;			}						_currentImage = _images[_count];			new TweenLite(_currentImage,.5,{alpha:1});			new TweenLite(_images[_count],.5,{alpha:0,delay:DELAY,onComplete:animate});		}	}}