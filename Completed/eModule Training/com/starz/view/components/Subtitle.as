package com.starz.view.components{	import flash.display.MovieClip;	import flash.events.Event;	import com.greensock.TweenLite;	public class Subtitle extends MovieClip	{				private static const TWEEN_SPEED:Number = 2.5;		public function Subtitle()		{			init();		}		private function init():void		{			myMask.scaleX = 0;			addEventListener(Event.ENTER_FRAME, animateText);		}		private function animateText(e:Event):void		{			removeEventListener(Event.ENTER_FRAME, animateText);			new TweenLite(myMask,TWEEN_SPEED,{scaleX:1});		}	}}