package com.starz.view.components{	import flash.events.MouseEvent;	import flash.events.Event;	import com.greensock.TweenLite;	import com.greensock.TimelineLite;	public class PopUp extends SimpleMC	{		private var _toggle:Boolean = false;		private var _tween:TweenLite;		private var _tweenIcon:TweenLite;		private var _viewed:Boolean = false;		public function PopUp()		{			init();		}		private function init():void		{			icon.buttonMode = true;			icon.mouseChildren = false;			icon.addEventListener(MouseEvent.CLICK, toggleContent);			addEventListener(Event.ENTER_FRAME, animateIcon);			textMask.x = -635;		}		private function toggleContent(e:MouseEvent):void		{			_viewed = true;			if (_toggle)			{				_tween = new TweenLite(textMask,.4,{x:-635});				_toggle = false;			}			else			{				_tween = new TweenLite(textMask,.4,{x:48});				_toggle = true;			}		}		private function animateIcon(e:Event=null):void		{			if (hasEventListener(Event.ENTER_FRAME))			{				showMC(1);				removeEventListener(Event.ENTER_FRAME, animateIcon);			}			if (! _viewed)			{				if (icon.scaleX == 1)				{					_tweenIcon = new TweenLite(icon,.35,{scaleX:.9,scaleY:.9,onComplete:animateIcon});				}				else				{					_tweenIcon = new TweenLite(icon,.35,{scaleX:1,scaleY:1,onComplete:animateIcon});				}			}			else			{				new TweenLite(icon,.25,{scaleX:1,scaleY:1});			}		}	}}