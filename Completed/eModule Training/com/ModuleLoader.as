package com{	import flash.display.MovieClip;	import flash.display.Loader;	import flash.net.URLRequest;	import flash.events.ProgressEvent;	import com.greensock.TweenLite;	import com.starz.constants.ApplicationSettings;	public class ModuleLoader extends MovieClip	{		private var _module:Loader;		private var _preloader:MCPreloader;		public function ModuleLoader()		{			init();		}		private function init():void		{			stop();			loadModule("Content2.swf");		}		private function loadModule(m$:String):void		{			_module = new Loader();			addChild(_module);						_module.load(new URLRequest(m$));			_module.contentLoaderInfo.addEventListener(ProgressEvent.PROGRESS, handleLoadProgress);			_preloader = new MCPreloader();			_preloader.x = ApplicationSettings.STAGE_WIDTH / 2;			_preloader.y = ApplicationSettings.STAGE_HEIGHT / 2;			_preloader.alpha = 0;			addChild(_preloader);			new TweenLite(_preloader,.5,{alpha:1});		}		private function handleLoadProgress(e:ProgressEvent):void		{			_preloader.loadInfo.text = String(Math.round(100*(e.bytesLoaded/e.bytesTotal)))+"%";			if (e.bytesLoaded == e.bytesTotal)			{				_module.contentLoaderInfo.removeEventListener(ProgressEvent.PROGRESS, handleLoadProgress);				new TweenLite(_preloader,.5,{alpha:0,onComplete:destroyPreloader});			}		}		private function destroyPreloader():void		{			removeChild(_preloader);		}	}}