package com.gnut.view.interactive{	import flash.display.MovieClip;	import flash.events.MouseEvent;	import com.greensock.TweenLite;	public class ImageAdjustMenu extends MovieClip	{		private var $s:Array;		private var $t:Array;		private var _step:Number;		public function ImageAdjustMenu()		{			init();		}		private function init():void		{						visible = false;			_step = 0;			$s = new Array();			$t = new Array();			$s.push(s_x, s_y, s_xscale, s_yscale, s_brightness, s_contrast);			$t.push("Adjust the image until it is centered horizontally.", "Adjust the image until it is centered vertically.", "Widen the image until your face is the full width.", "Stretch the image until your face is the full height.", "Adjust the brightness.", "Adjust the contrast.");						b_prev.addEventListener(MouseEvent.CLICK, rewindMenu);			b_next.addEventListener(MouseEvent.CLICK, advanceMenu);		}		private function hideSliders():void		{			s_brightness.visible = false;			s_contrast.visible = false;			s_x.visible = false;			s_y.visible = false;			s_xscale.visible = false;			s_yscale.visible = false;		}		private function advanceMenu(e:MouseEvent):void		{			new TweenLite($s[_step],.5,{alpha:0, onComplete: advanceStep});		}		private function rewindMenu(e:MouseEvent):void		{			new TweenLite($s[_step],.5,{alpha:0, onComplete: rewindStep});		}		private function advanceStep():void		{			$s[_step].visible = false;						_step++;			if (_step==$s.length)			{				_step = 0;			}						setText();			setSlider();		}		private function rewindStep():void		{			$s[_step].visible = false;						_step--;			if (_step==-1)			{				_step = $s.length - 1;			}						setText();			setSlider();		}		private function setText():void		{			t_instructions.text = $t[_step];		}		private function setSlider():void {			$s[_step].alpha = 0;			$s[_step].visible = true;						new TweenLite($s[_step],.5,{alpha:1});		}		public function showMenu():void		{			visible = true;			alpha = 0;						new TweenLite(this,.5,{alpha:1});						hideSliders();			setText();			setSlider();		}		public function hideMenu():void		{			new TweenLite(this,.5,{alpha:0});			new TweenLite($s[_step],.5,{alpha:0});			t_instructions.text="";		}	}}