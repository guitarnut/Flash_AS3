package com.gnut.media.audioplayer.components{	import flash.media.Sound;	import flash.display.MovieClip;	import com.gnut.media.audioplayer.events.AudioPlayerEvent;	import flash.events.MouseEvent;	import flash.events.Event;	import com.greensock.TweenLite;	public class TrackButton extends MovieClip	{		private var _t:String;		private var _mp3:Sound;		private var _startingAlpha:Number = .7;		public function TrackButton()		{			init();		}		private function init():void		{			alpha = 0;			buttonMode = true;			mouseChildren = false;			addListeners();		}		private function showButton(e:Event):void		{			new TweenLite(this,1,{alpha: _startingAlpha});		}		private function addListeners():void		{			addEventListener(Event.ADDED_TO_STAGE, showButton);			addEventListener(MouseEvent.CLICK, handleClick);			addEventListener(MouseEvent.MOUSE_OVER, mouseFX);			addEventListener(MouseEvent.MOUSE_OUT, mouseFX);		}		private function mouseFX(e:MouseEvent):void		{			switch (e.type)			{				case MouseEvent.MOUSE_OVER :					MouseOverFX();					break;				case MouseEvent.MOUSE_OUT :					MouseOutFX();					break;			}		}		private function MouseOverFX():void		{			new TweenLite(this, .5, {alpha: 1});		}		private function MouseOutFX():void		{			new TweenLite(this, .5, {alpha: _startingAlpha});		}		private function handleClick(e:MouseEvent):void		{			dispatchEvent(new AudioPlayerEvent(AudioPlayerEvent.TRACK_CLICKED, true, false));		}		public function buttonOn():void		{			alpha = 1;		}		public function buttonOff():void		{			alpha = _startingAlpha;		}		public function set trackName($t:String)		{			_t = $t;		}		public function set trackFile($mp3:Sound)		{			_mp3 = $mp3;		}		public function get trackName():String		{			return _t;		}		public function get trackFile():Sound		{			return _mp3;		}	}}