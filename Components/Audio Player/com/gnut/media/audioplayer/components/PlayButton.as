package com.gnut.media.audioplayer.components{	import flash.events.MouseEvent;	public class PlayButton extends AudioPlayerButton	{		private var _paused:Boolean;		public function PlayButton($mc)		{			super($mc);			init();		}		private function init():void		{			_v.mc_pause.visible = false;			_v.mc_play.visible = true;			addEventListener(MouseEvent.CLICK, toggleIcon);		}		private function toggleIcon(e:MouseEvent):void		{			if (_paused==true)			{				_paused = false;			}			else			{				_paused = true;			}			setIcon();		}		private function setIcon():void		{			if (_paused)			{				_v.mc_pause.visible = false;				_v.mc_play.visible = true;			}			else			{				_v.mc_pause.visible = true;				_v.mc_play.visible = false;			}		}		public function set paused($b:Boolean):void		{			_paused = $b;			setIcon();		}		public function get paused():Boolean		{			return _paused;		}	}}